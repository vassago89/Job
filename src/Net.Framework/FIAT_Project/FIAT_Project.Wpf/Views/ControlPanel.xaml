                        <Slider Value="{Binding LightValue}" Maximum="100"/>
                        <Button Command="{Binding LightOnCommand}" IsEnabled="{Binding OnLight, Converter={StaticResource BooleanInverter}}">
                            <StackPanel>
                                <TextBlock Text="On"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding LightOffCommand}" IsEnabled="{Binding OnLight}">
                            <StackPanel>
                                <TextBlock Text="Off"/>
