             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="Slider">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="GroupBox">
                <Setter Property="Margin" Value="4"/>
            </Style>
            <Style TargetType="Button"  BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Margin" Value="4"/>
            </Style>
            <Style TargetType="UniformGrid">
                <Setter Property="Columns" Value="2"/>
            </Style>
            <conveters:BooleanInverter x:Key="BooleanInverter"/>
        </Grid.Resources>
        <StackPanel>
            <GroupBox 
                Header="Grab Control">
                <UniformGrid>
                    <Button Command="{Binding GrabCommand}" IsEnabled="{Binding OnGrab, Converter={StaticResource BooleanInverter}}">
                        <StackPanel>
                            <TextBlock Text="Grab"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding StopCommand}" IsEnabled="{Binding OnGrab}">
                        <StackPanel>
                            <TextBlock Text="Stop"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding RecordStartCommand}" IsEnabled="{Binding OnGrab}">
                        <StackPanel>
                            <TextBlock Text="Record Start"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding RecordStopCommand}" IsEnabled="{Binding OnGrab, Converter={StaticResource BooleanInverter}}">
                        <StackPanel>
                            <TextBlock Text="Record Stop"/>
                        </StackPanel>
                    </Button>
